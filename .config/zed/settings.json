// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "enabled": true
  },
  "language_models": {
    "anthropic": {
      "api_url": ""
    },
    "google": {
      "api_url": ""
    },
    "ollama": {
      "api_url": ""
    },
    "openai": {
      "api_url": ""
    },
    "open_router": {
      "api_url": ""
    },
    "lmstudio": {
      "api_url": ""
    },
    "deepseek": {
      "api_url": ""
    },
    "mistral": {
      "api_url": ""
    }
  },
  "icon_theme": "Catppuccin Frapp√©",
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "outline_panel": {
    "dock": "right"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "inlay_hints": {
    "enabled": true
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "minimap": {
    "show": "always"
  },
  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_size": 14,
  "buffer_font_family": "Monaspace Neon",
  "project_panel": {
    "show_diagnostics": "all",
    "auto_reveal_entries": true
  },
  "buffer_line_height": {
    "custom": 2
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "lsp": {
    "gopls": {
      // enable build flags for integration
      "initialization_options": {
        "buildFlags": ["-tags=integration,e2e"]
      }
    },
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--output.json.path",
          "stdout",
          "--show-stats=false",
          "--issues-exit-code=1"
        ]
      }
    }
  },
  "languages": {
    "Go": {
      "language_servers": ["gopls", "golangci-lint"],
      "formatter": {
        "external": {
          "command": "golangci-lint",
          "arguments": ["fmt", "--stdin"]
        }
      }
    }
  }
}

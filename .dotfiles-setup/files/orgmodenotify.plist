<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.user.orgmode-cron</string>
    <key>ProgramArguments</key>
    <array>
        <string>/opt/homebrew/bin/nvim</string>
        <string>--headless</string>
        <string>-c</string>
        <string>lua require("orgmode").cron()</string>
    </array>
    <key>StartInterval</key>
    <integer>60</integer>
    <key>RunAtLoad</key>
    <true/>
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
    <key>WorkingDirectory</key>
    <string>/Users/yourusername</string>
    <key>StandardOutPath</key>
    <string>/tmp/orgmode-cron.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/orgmode-cron.err</string>
</dict>
</plist>
